<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Cor da sombra -->
            <corners android:radius="8dp" /> <!-- Bordas arredondadas -->
        </shape>
    </item>

    <!-- Fundo principal -->
    <item
        android:bottom="4dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor de fundo branca -->
            <corners android:radius="8dp" /> <!-- Bordas arredondadas -->
        </shape>
    </item>
</layer-list>